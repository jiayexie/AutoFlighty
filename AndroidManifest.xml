<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiejiaye.napandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ConfigureActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver 
            android:name="NapIntentReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.xiejiaye.napandroid.TURN_ON_AIRPLANE" />
                <action android:name="com.xiejiaye.napandroid.TURN_OFF_AIRPLANE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>